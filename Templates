templates/bus_form.html
{% extends 'base.html' %}
{% block content %}
<h2>{{ action }} Bus</h2>
<form method="post">
  <label>Name: <input name="name" value="{{ bus.name if bus else '' }}" required></label><br>
  <label>Route: <input name="route" value="{{ bus.route if bus else '' }}" required></label><br>
  <label>Total seats: <input name="total_seats" value="{{ bus.total_seats if bus else 40 }}" type="number"></label><br>
  <label>Fare: <input name="fare" value="{{ bus.fare if bus else 0 }}" type="number"></label><br>
  <label>Departure time: <input name="depart_time" value="{{ bus.depart_time if bus else '' }}"></label><br>
  <button type="submit">{{ action }}</button>
</form>
{% endblock %}


templates/book.html
{% extends 'base.html' %}
{% block content %}
<h2>Book: {{ bus.name }}</h2>
<p>Route: {{ bus.route }} — Seats available: {{ bus.available_seats }} — Fare: ₹{{ bus.fare }}</p>
<form method="post">
  <label>Passenger name: <input name="passenger_name" value="{{ current_user.username }}"></label><br>
  <label>Phone: <input name="passenger_phone"></label><br>
  <label>Seats: <input name="seats" type="number" min="1" max="{{ bus.available_seats }}" value="1"></label><br>
  <button type="submit">Confirm Booking</button>
</form>
{% endblock %}


